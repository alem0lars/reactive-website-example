%a.btn.btn-navbar{:'data-toggle' => 'collapse', :'data-target' => '.nav-collapse'}
  - 3.times do
    %span.icon-bar
%a.brand{href: '/'} Higgs Website
.nav-collapse

  %ul.nav.pull-left
    - @left_menu.each do |item|
      %li= link_to item.body, item.url

  -# { Authentication & SignUp
  %ul.nav.pull-right
    %li.dropdown
      %a.dropdown-toggle{href: 'javascript:void(0)', :'data-toggle' => 'dropdown'}
        - if user_signed_in?
          = "Logged in as #{current_user.username}."
        - else
          Not logged in.
        %b.caret
      %ul.dropdown-menu
        - if user_signed_in?
          %li= link_to 'Edit', edit_user_registration_path
          %li= link_to 'Logout', destroy_user_session_path, method: 'delete'
        - else
          %li= link_to 'Login', new_user_session_path
          %li= link_to 'Signup', new_user_registration_path
  -# }

  %form.navbar-search.pull-right
    %input#search.search-query.span2{type: 'text', placeholder: 'Search'}

  %ul.nav.pull-right
    -@right_menu.each do |item|
      %li= link_to item.body, item.url
